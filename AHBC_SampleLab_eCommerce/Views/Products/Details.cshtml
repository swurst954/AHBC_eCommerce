@model AHBC_SampleLab_eCommerce.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ItemId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descirption)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descirption)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<button class="btn btn-default" id="getInventory">Get Inventory</button>


<button class="btn btn-default" id="getOrder">Create Order</button>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")



    <script language="javascript">

    var id = @Html.ValueFor(model => model.ItemId);

    $(document).ready(function () {
        $("#getInventory").click(function () {
            $.ajax({
                type: "GET",
                routeTemplate: "api/values/get/" + id,
                success: function (data) {
                    alert(data);
                },
                error: function () {
                    alert("Error while inserting data");
                }
            });
        });
        });
        $(document).ready(function () {
            $("#getOrder").click(function () {
                $.ajax({
                    type: "Delete",
                    routeTemplate: "api/values/delete/" + id,
                    success: function (data) {
                        alert(data);
                    },
                    error: function () {
                        alert("Error while inserting data");
                    }
                });
            });
        });
    </script>

}
